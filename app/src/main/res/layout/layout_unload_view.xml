<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/base_color_text_white"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_height="wrap_content"
        android:minHeight="36dp"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        >
        <ImageView
            android:layout_height="24dp"
            android:layout_width="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/img_map"
            android:src="@mipmap/icon_map"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卸货地址："
            android:textSize="14sp"
            android:id="@+id/zhdz"
            android:textColor="@color/text_color"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_map"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/tv_zhdz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="订单号"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/zhdz"
            android:layout_marginLeft="5dp"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line_text"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />
    <RelativeLayout
        android:layout_height="wrap_content"
        android:minHeight="36dp"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >
        <ImageView
            android:layout_height="24dp"
            android:layout_width="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/img_1"
            android:src="@mipmap/img_zh_xh"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="卸货磅单"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_1"
            android:layout_marginLeft="5dp"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_thz"
            android:layout_width="200dp"
            android:layout_height="118dp"
            android:scaleType="center"
            android:background="#f8f8f8"
            android:src="@mipmap/icon_photo_yao" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line_text"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />
    <RelativeLayout
        android:layout_height="wrap_content"
        android:minHeight="36dp"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="为方便结算运费，请如实填写"
            android:textSize="14sp"
            android:textColor="@color/text_color_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <TextView
            android:id="@+id/ivuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="净重(吨):"
            android:layout_marginLeft="5dp"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_medium" />

        <EditText
            android:id="@+id/editdw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_toRightOf="@+id/ivuser"
            android:background="@null"
            android:hint="请输入吨位"
            android:inputType="numberDecimal"
            android:maxLength="11"
            android:singleLine="true"
            android:text=""
            android:textColor="#0f2536"
            android:textColorHint="#CECECE"
            android:textSize="14sp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line_text"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        />
    <Button
        android:id="@+id/btn_sc"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="上传"
        android:textColor="@color/base_color_text_white"
        android:textSize="16sp"
        android:background="@drawable/btn_login_bg"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line_text"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />
</LinearLayout>
