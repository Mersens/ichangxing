<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/ddbh"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="12sp"
            android:text="订单编号:"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/tv_ddbh"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="10sp"
            tools:text="2019-01234654321"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/ddbh"
            android:layout_marginLeft="4dp"
            />
        <TextView
            android:id="@+id/tv_money"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="10sp"
            tools:text="2019"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/money"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="12sp"
            android:text="已支付金额:"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/tv_money"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:id="@+id/zje"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="12sp"
            android:text="总金额:"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/tv_zje"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="10sp"
            tools:text="2019-01234654321"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/zje"
            android:layout_marginLeft="4dp"
            />
        <TextView
            android:id="@+id/tv_dzfje"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="10sp"
            tools:text="2019"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:id="@+id/dzfje"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="12sp"
            android:text="待支付金额:"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/tv_dzfje"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >

        <TextView
            android:id="@+id/tv_time"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="10sp"
            tools:text="2019"
            android:layout_centerVertical="true"
           android:layout_toRightOf="@+id/time"
            android:layout_marginLeft="4dp"
            />
        <TextView
            android:id="@+id/time"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="12sp"
            android:text="支付时间:"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"

            />
    </RelativeLayout>

</LinearLayout>
