<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/base_color_text_white"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <include layout="@layout/layout_toolbar"/>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:minHeight="36dp"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="寄送地址："
            android:textSize="14sp"
            android:id="@+id/jsdz"
            android:textColor="@color/text_color_black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/tv_jsdz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="无"
            android:textSize="14sp"
            android:textColor="@color/text_color"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/jsdz"
            android:layout_marginLeft="5dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_kdgs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <TextView
            android:id="@+id/ivuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="快递公司:"
            android:layout_marginLeft="5dp"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_medium" />

        <EditText
            android:id="@+id/editkdgs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/ivuser"
            android:background="@null"
            android:hint="请选择快递公司"
            android:inputType="text"
            android:singleLine="true"
            android:enabled="false"
            android:focusable="false"
            android:text=""
            android:textColor="@color/text_color"
            android:textColorHint="#CECECE"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/img_arr"
            android:layout_height="17dp"
            android:layout_width="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:src="@mipmap/icon_arr_gr"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >

        <TextView
            android:id="@+id/kddh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="快递单号:"
            android:layout_marginLeft="5dp"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_medium" />

        <EditText
            android:id="@+id/editkddh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/kddh"
            android:background="@null"
            android:hint="请输入快递单号"
            android:inputType="text"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/text_color"
            android:textColorHint="#CECECE"
            android:textSize="14sp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line_text"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_thz"
            android:layout_width="200dp"
            android:layout_height="118dp"
            android:scaleType="center"
            android:background="#f8f8f8"
            android:src="@mipmap/icon_photo_yao" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_sc"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="上传"
        android:textColor="@color/base_color_text_white"
        android:textSize="16sp"
        android:background="@drawable/btn_login_bg"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        />
</LinearLayout>
